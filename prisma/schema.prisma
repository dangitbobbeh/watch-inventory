datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Watch {
  id           String  @id @default(cuid())
  brand        String
  model        String
  reference    String?
  serial       String?
  caliber      String?
  caseMaterial String?
  dialColor    String?
  diameter     Int?
  condition    String?
  notes        String?

  // Purchase
  purchasePrice  Decimal?
  purchaseDate   DateTime?
  purchaseSource String?

  // Pre-sale costs (service, parts, etc.)
  additionalCosts Decimal? @default(0)

  // Sale
  salePrice      Decimal?
  saleDate       DateTime?
  platformFees   Decimal?  @default(0)
  salesTax       Decimal?  @default(0)
  marketingCosts Decimal?  @default(0)
  shippingCosts  Decimal?  @default(0)

  status    String   @default("in_stock")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
